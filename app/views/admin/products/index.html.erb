<% content_for :title, "Products" %>

<div class="w-full">
    <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
    <% end %>



    <div class="flex justify-between items-center">
        <h1 class="font-bold text-4xl">Products</h1>
        <%= link_to "New product", new_admin_product_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    </div>
    <div class="flex mt-10 items-center space-x-2">
        <%= form_with url: admin_products_path, method: :get, class: "flex flex-1" do |form| %>
        <%= form.text_field :query, placeholder: "Search", class: "w-full shadow-sm rounded-md border px-3 py-2 border-gray-400 focus:outline-blue-600" %>
        <%= form.submit "Submit", class: "ml-2 h-[42px] px-4 bg-gray-500 text-white rounded-md hover:bg-gray-600" %>
        <% end %>

        <%= form_with url: admin_products_path, method: :get, class: "flex-shrink-0" do |form| %>
        <%= form.submit "Clear", class: "h-[42px] px-4 bg-gray-500 text-white rounded-md hover:bg-gray-600" %>
        <% end %>
    </div>

    <div class="flex flex-col w-full">
        <div class="overflow-x-auto sm:mx- .5 lg:mx-0.5">
            <div class="py-2 inline-block min-w-full">
                <div class="overflow-x-auto">
                    <table class="min-w-full overflow-x-scroll">
                        <thead class="bg-white border-b">
                            <tr>
                                <th scope="col" class="text-sm font-meduim text-gray-800 px-6 py-4 text-left">
                                    Image
                                </th>

                                <th scope="col" class="text-sm font-meduim text-gray-800 px-6 py-4 text-left">
                                    Name
                                </th>
                                <th scope="col" class="text-sm font-meduim text-gray-800 px-6 py-4 text-left">
                                    Description
                                </th>
                                <th scope="col" class="text-sm font-meduim text-gray-800 px-6 py-4 text-left">
                                    Price
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @admin_products.each do |p|%>
                            <tr class="bg-gray-50 border-b">
                                <td class="px-6 py-4 whitespace-nowrap text-sm front-medium tex-gray-800 underline">
                                    <%= image_tag(p.images.any? ? p.images.first.variant(:thumb) : "https://via.placeholder.com/50") %></td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm front-medium tex-gray-800 underline">
                                    <%= link_to p.name, edit_admin_product_path(p) %> </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm front-medium tex-gray-800 underline">
                                    <%= p.description %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm front-medium tex-gray-800 underline">
                                    $<%= (p.price/100.0).to_s %>
                                </td>
                            </tr>
                            <%end%>
                        </tbody>

                    </table>
                    <div class="mt-4 flex justify-center">

                        <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>